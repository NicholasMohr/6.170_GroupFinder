<div id="user">
  <div class="container">

    <div class="row">
      <span style="float:right"><a href="#" id="logout-link">Logout</a></span>
      <h1 class="title">GroupFinder</h1>
    </div>

    <div class="row" id="project_container">

      <div id="user_panel" class="col-sm-4">
        <h3>Welcome {{currentUser}}!</h3>
        <a href="#" class="info-page">Edit User Info</a>
        <br>
        <br>
        <h4>Your Projects</h4>
        <table class="table">
          {{#each userProjects}}
            <tr>
              <td>{{proj_id.name}}</td>
              <td><button class="visit-project">Visit</button></td>
            </tr>
          {{/each}}
        </table>
      </div>

      <div class="col-sm-8">
        <h1 class="subtitle">All Projects</h1>
        <table class="table">
          <tr>
            <th>Project Name</th>
            <th>Members</th>
            <th>Due Date</th>
          </tr>
          {{#each allProjects}}
            <tr>
              <td id='proj_name'>{{name}}</td>
              <td>{{users.length}}</td>
              <td>{{end_date}}</td>
              <td><button id="{{name}}" data-toggle="modal" data-target="#join_project_modal">Join</button></td>
            </tr>
          {{/each}}
        </table>
      </div>

    </div>

  </div>
</div>







<!-- Modal -->
<div class="modal fade" id="join_project_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Join Project</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button class="join-project" type="button">Save changes</button>
      </div>
    </div>
  </div>
</div>