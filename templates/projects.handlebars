<div id="project">

  <div class="container">

    <div class="row">
      <span style="float:right"><a href="#" id="home-link">Home</a><a href="#" id="logout-link">Logout</a></span>
      <h1 class="title">GroupFinder</h1>
    </div>

    <div class="row" id="project_container">

      <div id="project_panel" class="col-sm-4">

        <h3>{{project.name}}</h3>
        <p>
          <b>Due Date:</b> <br>
          {{date project.end_date}}
        </p>

        <form class="projectFilter">
          <span style="float:left"><p><i>Low</i></p></span>
          <span style="float:right"><p><i>High</i></p></span>
          <h5>Filter Weights:</h5>
          <p>Location</p>
          <input class="weight" type="range" data-name="location" min="0" max="10">
          <p>Availability</p>
          <input class="weight" type="range" data-name="availability" min="0" max="10">
          <p>Desired Grade</p>
          <input class="weight" type="range" data-name="desired_grade" min="0" max="10">
          <p>Interaction</p>
          <input class="weight" type="range" data-name="interaction" min="0" max="10">
          <p>Dedication</p>
          <input class="weight" type="range" data-name="dedication" min="0" max="10">
          <p>Timing</p>
          <input class="weight" type="range" data-name="timing" min="0" max="10">
          <input type="submit" value="Filter">
        </form>
      </div>

      <div class="col-sm-8">
        <h3>Members</h3>
          <table class="table">
            <tr>
              <th>Rank</th>
              <th>Username</th>
              <th>Location</th>
            </tr>
            {{#each users}}
              <tr>
                <td>{{@index}}</td>
                <td><a class="user_info" data-toggle="modal" data-target="#{{authentication.username}}_info">{{authentication.username}}</a></td>
                <td>{{info.location}}</td>
              </tr>
              {{> modal}}
            {{/each}}
          </table>
      </div>

    </div>
  </div>

</div>